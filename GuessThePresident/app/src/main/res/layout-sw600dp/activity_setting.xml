<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context="com.superapp.guessthepresidentushistoryquiztrivia.activity.SettingActivity">
    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/back"
        android:layout_margin="10sp"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/btn_setting_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textcolorwhite"
            android:textSize="50sp"
            android:textStyle="bold" android:onClick="onSoundClick"
            android:background="@null"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATE"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textcoloryellow"
                android:textSize="25sp"
                android:textStyle="bold"
                android:onClick="onSoundClick"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIKE US"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textcoloryellow"
                android:textSize="25sp"
                android:textStyle="bold"
                android:onClick="onSoundClick"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT US"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textcoloryellow"
                android:textSize="25sp"
                android:textStyle="bold"
                android:onClick="onSoundClick"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOT GAME"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textcoloryellow"
                android:textSize="25sp"
                android:textStyle="bold"
                android:onClick="onSoundClick"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
