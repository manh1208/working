<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textSize="@dimen/score_text_size"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtScore"
        android:textStyle="bold"
        android:textColor="@color/textcolorred"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textSize="@dimen/timecountdown_text_size"
        android:layout_marginTop="20sp"
        android:id="@+id/txtCoutdown"
        />
    <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:src="@drawable/abrahamlincoln"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/contentdescription"
        android:layout_below="@+id/txtCoutdown"
        android:layout_marginTop="10sp"
        android:id="@+id/ivLogo"
        android:background="@null"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_anwser_height"
        android:layout_alignParentBottom="true"
        android:text="Đáp an 3"
        android:textColor="@color/textcolorwhite"
        android:background="@color/button_answer_2"
        android:layout_marginTop="@dimen/answer_margin_top"
        android:textSize="@dimen/button_anwser_text_size"
        android:id="@+id/btnAnswer3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_anwser_height"
        android:text="Đáp an 2"
        android:textColor="@color/textcolorwhite"
        android:background="@color/button_answer_2"
        android:layout_marginTop="@dimen/answer_margin_top"
        android:textSize="@dimen/button_anwser_text_size"
        android:id="@+id/btnAnswer2"
        android:layout_above="@id/btnAnswer3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_anwser_height"
        android:layout_above="@id/btnAnswer2"
        android:text="Đáp an 1"
        android:layout_marginTop="@dimen/answer_margin_top"
        android:textColor="@color/textcolorwhite"
        android:background="@color/button_answer_2"
        android:textSize="@dimen/button_anwser_text_size"
        android:id="@+id/btnAnswer1"/>


</RelativeLayout>